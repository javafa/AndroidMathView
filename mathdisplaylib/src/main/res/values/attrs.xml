<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AndroidMathView">
        <attr name="latex" format="reference|string" />
        <attr name="fontColor" format="color" />

        <attr name="fontSize" format="dimension" />

        <attr name="autoSize" format="boolean" />

        <attr name="fontType" format="enum" >
            <enum name="LatinModernMath" value="0"/>
            <enum name="TeXGyreTermes" value="1"/>
            <enum name="XITSMath" value="2"/>
        </attr>

        <attr name="textAlignment" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
</resources>